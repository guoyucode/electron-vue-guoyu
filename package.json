{
  "name": "electron-vue",
  "author": {
    "name": "guoyu",
    "email": "guoyumail@qq.com"
  },
  "version": "0.0.1",
  "private": true,
  "main": "./electron-main/main.js",
  "scripts": {
    "dev-vue": "cross-env NODE_ENV=development vue-cli-service serve",
    "dev-electron": "cross-env NODE_ENV=development electron --debug=5858 electron-main/main.js ",
    "postinstall": "electron-builder install-app-deps",
    "electron-builder": "vue-cli-service build && electron-builder"
  },
  "dependencies": {
    "axios": "0.19.0",
    "echarts": "4.3.0",
    "element-ui": "2.12.0",
    "qs": "6.8.0",
    "vue": "2.6.10",
    "vue-router": "3.1.3",
    "vue-view-lazy": "0.0.6",
    "electron-debug": "3.0.1",
    "electron-updater": "4.1.2"
  },
  "devDependencies": {
    "electron": "6.0.10",
    "electron-builder": "21.2.0",
    "electron-rebuild": "^1.8.6",
    "@vue/cli-service": "3.11.0",
    "vue-template-compiler": "2.6.10",
    "cross-env": "6.0.0"
  },
  "vue": {
    "publicPath": "./",
    "outputDir": "dist",
    "assetsDir": "",
    "lintOnSave": false,
    "runtimeCompiler": true,
    "productionSourceMap": false,
    "parallel": true
  },
  "build": {
    "asar": true,
    "productName": "electron-vue",
    "appId": "electron-vue-appid",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "url": "https://github.com",
        "owner": "you github name",
        "repo": "your repo",
        "private": false
      }
    ],
    "files": [
      "dist/**",
      "electron-main/**"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "linux": {
      "icon": "public/icons/icons"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
